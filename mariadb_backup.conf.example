[mysql]
host = localhost
user = root
password = your_mysql_password_here
port = 3306

[backup_paths]
hourly = /var/backups/mariadb/hourly
daily = /var/backups/mariadb/daily
monthly = /var/backups/mariadb/monthly

[options]
compression = yes
encryption = no
encryption_key_file = /root/.mariadb_backup_key

[rotation]
hourly_keep = 24
daily_keep = 31
monthly_keep = 12

[replication]
# Master server settings for slave replication
# Leave empty if this is a standalone server or master
master_host = 
master_user = 
master_password = 
master_port = 3306

[webhooks]
success_url = 
failure_url = 
